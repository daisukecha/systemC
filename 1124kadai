#include <stdio.h>
#include <string.h>

int main()
{
    char a[100];
    
    printf("Please Enter a Password: ");
    scanf("%99s",a);
    
    int upperCaseCount=0;
    int length=strlen(a)
    
    ;for(int i = 0;i < length;i++){
        if(a[i]>='A'&&a[i]<='Z'){
            upperCaseCount++;
        }
    }
    
    if (upperCaseCount>0){
        printf("大文字が'%d'含まれています",upperCaseCount);
    }
    
    else
    {
        printf("大文字が含まれていません");
    }
    
    ;for(int k = 0;k < length;k++){
        if(a[k]>='a'&&a[k]<='z'){
            upperCaseCount++;
        }
    }
    
    if (upperCaseCount>0){
        printf("小文字が'%d'含まれています",upperCaseCount);
    }
    
    else
    {
        printf("小文字は含まれていません");
    }
    
    ;for(int j = 0;j < length;j++){
        if(a[j]>='0'&&a[j]<='9'){
            upperCaseCount++;
        }
    }
    
    if (upperCaseCount>0){
        printf("数字が'%d'含まれています");
    }
    
    else
    {
        printf("数字が含まれていません");
    }
    
    return 0;
}
